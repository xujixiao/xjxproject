<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_corner_white_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_alert_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_alert_title"
            android:gravity="center"
            android:text="提示"
            android:textColor="@color/white"
            android:textSize="@dimen/text_3" />

        <TextView
            android:id="@+id/tv_alert_content"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="是否确认分配？"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_3" />

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_alert_negative"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/basic_dialog_pressed"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="取消"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_3" />

            <!--<View
                android:id="@+id/v_btnline"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/background"/>-->

            <Button
                android:id="@+id/btn_alert_positive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/basic_dialog"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="确定"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_3" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>